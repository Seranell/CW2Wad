<html>
<head>
  {{>header}}
</head>
<body>
  <h1>{{title}}</h1>
  <div class="text-right" style="margin-bottom: 1em;">
    {{^user}}
      <a id="login" href="/login" class="btn btn-primary">
        Sign in
      </a>
      <a id="login" href="/register" class="btn btn-primary">
        Register
      </a>
    {{/user}}
    {{#user}}
      <a id="logout" href="/logout" class="btn btn-primary">
        Sign out
      </a>
    {{/user}}
  </div>
  <div class="text-right">
    <a href="/additem" class="btn btn-primary">
      Add a new food item
    </a>
  </div>
  {{#foodItems}}
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">{{name}}</h4>
        <p class="card-text">
          {{description}}
        </p>
        <div class="card-footer">
          Category: {{category}} | Published: {{published}}
        </div>
      </div>
    </div>
  {{/foodItems}}
  {{^foodItems}}
    <p>No food items available.</p>
  {{/foodItems}}
</body>
</html>
